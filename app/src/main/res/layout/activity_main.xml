<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.androidbasicsdartcounter.MainActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/player_a_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.android.courtcounter.MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Player A"
                android:textAlignment="center"
                android:textColor="@color/colorNumberNormal"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/player_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="501"
                android:textAlignment="center"
                android:textColor="@color/colorNumberNormal"
                android:textSize="56sp" />

            <!-- a box to contain per round scoring information for player a -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- round 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/shotTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="1"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/player_a_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/colorNumberNormal"
                        android:textSize="18sp" />

                </LinearLayout>


                <!-- round 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/shotTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="2"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/player_a_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/colorNumberNormal"
                        android:textSize="18sp" />

                </LinearLayout>


                <!-- round 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/shotTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="3"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/player_a_third"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/colorNumberNormal"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- total -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/shotTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Total"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/player_a_subtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/colorNumberNormal"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>

            <!--

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:onClick="threePointsA"
                            android:text="+3 Points"
                            android:textAllCaps="true" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:onClick="twoPointsA"
                            android:text="+2 Points"
                            android:textAllCaps="true" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:onClick="freeThrowA"
                            android:text="Free throw"
                            android:textAllCaps="true" />
            -->

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/player_b_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.android.courtcounter.MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Player B"
                android:textAlignment="center"
                android:textColor="@color/colorNumberNormal"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/player_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="501"
                android:textAlignment="center"
                android:textSize="56sp" />

            <!-- a box to contain per round scoring information for player b -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- round 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorNumberNormal"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/player_b_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/colorNumberNormal"
                        android:textSize="18sp" />

                </LinearLayout>


                <!-- round 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="2"
                        android:textAlignment="center"
                        android:textColor="@color/colorNumberNormal"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/player_b_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/colorNumberNormal"
                        android:textSize="18sp" />

                </LinearLayout>


                <!-- round 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="3"
                        android:textAlignment="center"
                        android:textColor="@color/colorNumberNormal"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/player_b_third"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/colorNumberNormal"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- total -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="Total"
                        android:textAlignment="center"
                        android:textColor="@color/colorNumberNormal"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/player_b_subtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/colorNumberNormal"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">
        <!-- double & triple toggle buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/double_button"
                style="@style/specialButton"
                android:onClick="onDoubleButtonClick"
                android:text="Double" />

            <Button
                android:id="@+id/triple_button"
                style="@style/specialButton"
                android:onClick="onTripleButtonClick"
                android:text="Triple" />

        </LinearLayout>


        <!-- first row of scoring buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorScoreButton"
                android:onClick="onScoreClick"
                android:tag="1"
                android:text="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorScoreButton"
                android:onClick="onScoreClick"
                android:tag="2"
                android:text="2" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="3"
                android:text="3" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="4"
                android:text="4" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="5"
                android:text="5" />

        </LinearLayout>

        <!-- second row of scoring buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="6"
                android:text="6" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="7"
                android:text="7" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="8"
                android:text="8" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="9"
                android:text="9" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="10"
                android:text="10" />

        </LinearLayout>

        <!-- third row of scoring buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="11"
                android:text="11" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="12"
                android:text="12" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="13"
                android:text="13" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="14"
                android:text="14" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="15"
                android:text="15" />

        </LinearLayout>

        <!-- fourth row of scoring buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="16"
                android:text="16" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="17"
                android:text="17" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="18"
                android:text="18" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="19"
                android:text="19" />

            <Button
                style="@style/standardButton"
                android:onClick="onScoreClick"
                android:tag="20"
                android:text="20" />

        </LinearLayout>

        <!-- fifth row of scoring + utility buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Button
                style="@style/standardButton"
                android:onClick="onBullButtonClick"
                android:text="Bull"
                android:textAllCaps="true" />

            <Button
                style="@style/standardButton"
                android:onClick="onZeroButtonClick"
                android:text="0" />

            <Button
                style="@style/specialButton"
                android:onClick="onTriple20ButtonClick"
                android:text="T20" />

            <Button
                style="@style/specialButton"
                android:onClick="onUndoButtonClick"
                android:text="Undo"
                android:textAllCaps="true" />

            <Button
                style="@style/specialButton"
                android:onClick="reset"
                android:text="Reset"
                android:textAllCaps="true" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
